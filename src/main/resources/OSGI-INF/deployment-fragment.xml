<?xml version="1.0"?>
<fragment version="1">

  <extension target="application#MODULE">
    <module>
      <ejb>${bundle.fileName}</ejb>
    </module>
  </extension>

  <extension target="pages#PAGES">

    <page view-id="/userscompat/view_users.xhtml">breadcrumb=command.manageMembers</page>

    <page view-id="/userscompat/view_many_users.xhtml">
      breadcrumb=command.manageMembers
    </page>

  </extension>

  <extension target="faces-config#NAVIGATION">
    <!-- users ang groups -->

    <navigation-case>
      <from-outcome>view_users</from-outcome>
      <to-view-id>/userscompat/view_users.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>view_many_users</from-outcome>
      <to-view-id>/userscompat/view_many_users.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>edit_user</from-outcome>
      <to-view-id>/userscompat/edit_user.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>edit_user_password</from-outcome>
      <to-view-id>/userscompat/edit_user_password.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>view_user</from-outcome>
      <to-view-id>/userscompat/view_user.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>create_user</from-outcome>
      <to-view-id>/userscompat/create_user.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>view_groups</from-outcome>
      <to-view-id>/userscompat/view_groups.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>view_group</from-outcome>
      <to-view-id>/userscompat/view_group.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>edit_group</from-outcome>
      <to-view-id>/userscompat/edit_group.xhtml</to-view-id>
      <redirect />
    </navigation-case>

    <navigation-case>
      <from-outcome>create_group</from-outcome>
      <to-view-id>/userscompat/create_group.xhtml</to-view-id>
      <redirect />
    </navigation-case>

  </extension>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>
  </install>

</fragment>

